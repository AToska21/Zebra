#!/bin/sh

finish() {
	f="${1}"

	[ -z "${f}" ] || [ -z "${CYDIA}" ] && return

	read -r fd ver <<-EOF
			${CYDIA}
			EOF

	echo ${fd} > /tmp/pipe.txt
	echo ${ver} >> /tmp/pipe.txt

	[ "${ver}" -ge 1 ] || return

	lsof -a -p $$ >> /tmp/pipe.txt
	echo "finish:${f}" >> /tmp/pipe.txt
	echo "finish:${f}" >&"${fd}"
}

finish uicache

exit 0
